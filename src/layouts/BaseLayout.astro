---
import { Image } from "astro:assets";
import Header from "../components/Header.astro";
import "../styles/global.css";
import fs from "../image/index/fs.png";
import Footer from "../components/Footer.astro";
const { pageTitle, desc } = Astro.props;

const makeTitle = pageTitle
	? pageTitle + " | " + "流量卡官网 | 流客科技"
	: "流客科技 - 万网之流，来者皆可客";
---

<html lang="zh-cn">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={desc} />
		<title>{makeTitle}</title>
	</head>
	<body>
		<Header />
		<main>
			<div class="flex">
				<div class="xl:basis-5/6 xl:mx-20"><slot /></div>
				<div
					class="bg-slate-500 m-10 hidden xl:basis-1/6 p-10 max-h-96 text-xl xl:grid items-center"
				>
					<div>
						🏘️粉丝群
						<Image
							src={fs}
							width={150}
							height={150}
							alt="粉丝福利微信群"
						/>
					</div>
					<!--?xml version="1.0" encoding="UTF-8"?-->
					📱155563 55573
				</div>
			</div>
		</main>
		<Footer />
		<script>
			document.getElementById("expend")?.addEventListener("click", () => {
				console.log("run");
				document.getElementById("menu")?.classList.toggle("hidden");
			});
		</script>
	</body>
</html>
