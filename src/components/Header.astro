---
import { Image } from "astro:assets";
import logo from "../image/index/logo_w.png";
---

<header>
  <nav class="bg-gray-800 px-4 py-3">
    <div class="container mx-auto flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-start">
        <a href="/" class="flex-shrink-0">
          <Image class="h-14 w-auto rounded-lg" width={231} height={64} src={logo} alt="Logo" />
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex items-center space-x-6">
        <a href="/hotcard" class="nav-link">流量卡</a>
        <a href="/wifi" class="nav-link">随身Wifi</a>
        <a href="/product" class="nav-link">最新产品</a>
        <a href="/news" class="nav-link">最新资讯</a>
        <a href="/agent" class="nav-link">代理合作</a>
        <a href="/about" class="nav-link">关于我们</a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="lg:hidden text-gray-200 hover:text-white focus:text-white focus:outline-none"
        aria-label="toggle menu"
        id="togglemenu"
      >
        <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
          <path fill-rule="evenodd" d="M4 5h16v2H4V5zm0 6h16v2H4v-2zm0 6h16v2H4v-2z"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="lg:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/hotcard" class="mobile-nav-link">流量卡</a>
        <a href="/wifi" class="mobile-nav-link">随身Wifi</a>
        <a href="/product" class="mobile-nav-link">最新产品</a>
        <a href="/news" class="mobile-nav-link">最新资讯</a>
        <a href="/agent" class="mobile-nav-link">代理合作</a>
        <a href="/about" class="mobile-nav-link">关于我们</a>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-gray-300 text-[19px] tracking-wide font-medium hover:text-white px-4 py-2 rounded-lg transition-all duration-200;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    position: relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #60A5FA, #3B82F6);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }
  
  .nav-link:hover::after {
    width: 80%;
  }

  .mobile-nav-link {
    @apply block text-[19px] tracking-wide font-medium text-gray-300 hover:text-white hover:bg-gray-700 px-4 py-3 rounded-lg transition-all duration-200;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }
</style>

<script>
  document.getElementById("togglemenu")?.addEventListener("click", () => {
    document.getElementById("mobile-menu")?.classList.toggle("hidden");
  });
</script>
