---
import { Image } from "astro:assets";
import logo from "../image/index/logo_w.png";

// 导航链接数据
const navLinks = [
  { href: "/hotcard", text: "流量卡" },
  { href: "/wifi", text: "随身Wifi" },
  { href: "/product", text: "最新产品" },
  { href: "/news", text: "最新资讯" },
  { href: "/agent", text: "代理合作" },
  { href: "/about", text: "关于我们" }
];
---

<header class="relative z-50">
  <nav class="bg-gray-800 px-4 py-3">
    <div class="container mx-auto flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-start">
        <a href="/" class="flex-shrink-0">
          <Image 
            class="h-14 w-auto rounded-lg" 
            width={231} 
            height={64} 
            src={logo} 
            alt="Logo" 
          />
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex items-center space-x-6">
        {navLinks.map(link => (
          <a href={link.href} class="nav-link">{link.text}</a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="lg:hidden text-gray-200 hover:text-white focus:text-white focus:outline-none"
        aria-label="toggle menu"
        id="togglemenu"
      >
        <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
          <path fill-rule="evenodd" d="M4 5h16v2H4V5zm0 6h16v2H4v-2zm0 6h16v2H4v-2z"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {navLinks.map(link => (
          <a href={link.href} class="mobile-nav-link">{link.text}</a>
        ))}
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-gray-300 text-[19px] tracking-wide font-medium hover:text-white px-4 py-2 rounded-lg transition-all duration-200;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    position: relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #60A5FA, #3B82F6);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }
  
  .nav-link:hover::after {
    width: 80%;
  }

  .mobile-nav-link {
    @apply block text-[19px] tracking-wide font-medium text-gray-300 hover:text-white hover:bg-gray-700 px-4 py-3 rounded-lg transition-all duration-200;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  #mobile-menu {
    transition: all 0.3s ease-in-out;
    opacity: 0;
    transform: translateY(-10px);
  }

  #mobile-menu.show {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const toggleMenu = document.getElementById("togglemenu");
  const mobileMenu = document.getElementById("mobile-menu");
  
  if (toggleMenu && mobileMenu) {
    toggleMenu.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
      // 添加一个短暂延迟以确保过渡效果正常显示
      setTimeout(() => {
        mobileMenu.classList.toggle("show");
      }, 10);
    });
  }

  // 处理页面切换时关闭菜单
  document.addEventListener('astro:page-load', () => {
    if (mobileMenu) {
      mobileMenu.classList.remove("show");
      mobileMenu.classList.add("hidden");
    }
  });
</script>
