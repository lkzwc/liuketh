---
import { Image } from "astro:assets";
import officialAccount from "../image/index/official.webp";
import logo from "../image/index/logo_w.png";
---

<footer>
  <section>
    <div class="w-full flex-col bg-black py-10 text-white lg:flex lg:px-10 xl:px-20">
      <!-- TOP CONTAINER -->
      <div class="grid md:flex md:flex-row justify-center">
        <!-- LOGO DIV -->
        <div class="ml-20">
          <!-- LOGO -->
          <a href="/" class="inline-block max-w-full">
            <Image
              src={logo}
              alt="logo"
              width={170}
              height={100}
              class="inline-block max-h-10 rounded-2xl"
            />
          </a>
          <p class="font-sans mt-4 max-w-[350px] text-base font-normal text-gray-400">
            通讯行业数十年的深耕
          </p>
          <!-- SOCIAL MEDIA ICONS -->
          <div class="mb-8 mt-6 flex flex-row">
            <Image 
              src={officialAccount} 
              alt="流量卡官网" 
              width={150} 
              height={150}
              class="rounded-lg shadow-lg hover:shadow-xl transition-all duration-300" 
            />
          </div>
        </div>

        <!-- FOOTER LINKS -->
        <div class="pl-24 sm:flex sm:flex-row sm:flex-wrap sm:mx-10 sm:gap-20">
          <!-- LINK BLOCK -->
          <div class="mb-5 mr-6 flex w-[100px] grow basis-[100px] flex-col space-y-5">
            <h2 class="font-sans font-semibold">流量卡</h2>
            <a href="/hotcard" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">流量卡靓号</a>
            <a href="/hotcard" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">内部套餐卡</a>
            <a href="/hotcard" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">互联网卡</a>
          </div>

          <!-- LINK BLOCK -->
          <div class="mb-5 mr-8 flex w-[100px] grow basis-[100px] flex-col space-y-5">
            <h2 class="font-sans font-semibold">其他产品</h2>
            <a href="/wifi" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">随身WiFi</a>
            <a href="/wifi" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">云路由</a>
            <a href="/wifi" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">云闪付</a>
          </div>

          <!-- LINK BLOCK -->
          <div class="mb-5 flex w-[100px] grow basis-[80px] flex-col space-y-5">
            <h2 class="font-sans font-semibold">其他</h2>
            <a href="/about" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">关于我们</a>
            <a href="/news" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">最新资讯</a>
            <a href="/agent" class="font-sans font-normal text-gray-400 hover:text-white transition-colors duration-300">代理合作</a>
          </div>
        </div>

        <!-- LOCATION & SUPPORT -->
        <div class="flex flex-col mx-20 space-y-6">
          <!-- ITEM -->
          <div class="group flex items-center space-x-4 hover:bg-gray-800 p-3 rounded-lg transition-all duration-300">
            <div class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 21C15.5 17.4 19 14.1764 19 10.2C19 6.22355 15.866 3 12 3C8.13401 3 5 6.22355 5 10.2C5 14.1764 8.5 17.4 12 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
