---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import wifi from "../../image/product/wifi.webp";
import wifi2 from "../../image/product/cloudwifi2.webp";
import neibu from "../../image/product/neibu.webp";
import number from "../../image/product/number.webp";

const products = [
  {
    id: 1,
    name: '随身WiFi',
    description: '便携式WiFi，随时随地高速上网，支持4G/5G双模，8小时续航，多设备同时连接，让您在旅途中也能享受高速网络。',
    image: wifi,
    imageAlt: '流客科技随身WiFi-便携式高速上网设备展示图',
    price: '¥79',
    features: [
      '4G/5G双模网络',
      '8小时持久续航',
      '支持多设备接入',
      '全国漫游无限制',
      '智能网络优化',
      '便携小巧设计'
    ],
    link: 'https://work.weixin.qq.com/gm/2f7011219a43a467a4e178a259797647',
    tag: '热销',
    tagColor: 'from-red-500 to-red-600'
  },
  {
    id: 2,
    name: '云路由',
    description: '智能路由器，打造家庭网络中心。支持WiFi6技术，智能组网，AI防护，让您的家庭网络更安全、更稳定、更快速。',
    image: wifi2,
    imageAlt: '流客科技云路由-智能家庭网络路由器展示图',
    price: '¥399',
    features: [
      '双频WiFi6技术',
      '智能分布式组网',
      'AI网络防护',
      '千兆端口支持',
      '智能设备管理',
      '防蹭网保护'
    ],
    link: 'https://work.weixin.qq.com/gm/2f7011219a43a467a4e178a259797647',
    tag: '新品',
    tagColor: 'from-green-500 to-green-600'
  },
  {
    id: 3,
    name: '内部套餐卡',
    description: '超值套餐，专享优惠价。大流量，低月租，全国漫游，为您提供最实惠的通信服务，让您畅享无限网络。',
    image: neibu,
    imageAlt: '流客科技内部套餐卡-超值优惠套餐展示图',
    price: '免费包邮',
    features: [
      '超大流量套餐',
      '低至99元月租',
      '全国无限漫游',
      '5G网络支持',
      '专属客服服务',
      '灵活套餐选择'
    ],
    link: 'http://tc.liuketh.cn',
    tag: '优惠',
    tagColor: 'from-purple-500 to-purple-600'
  },
  {
    id: 4,
    name: '靓号专区',
    description: '精选靓号，彰显品味。提供多样化的号码选择，让您的通讯更有个性，展现独特魅力。',
    image: number,
    imageAlt: '流客科技靓号专区-精选手机号码展示图',
    price: '0元起',
    features: [
      '精选靓号资源',
      '号码意义评估',
      '全国号码可选',
      'VIP专属服务',
      '快速办理激活',
      '终身号码保护'
    ],
    link: 'http://lh.liuketh.cn',
    tag: '精选',
    tagColor: 'from-yellow-500 to-yellow-600'
  }
];

const pageTitle = "最新产品";
const pageDesc = "流客科技最新产品展示 - 包括随身WiFi、云路由、内部套餐卡、靓号专区等。提供便携上网设备、智能路由器、优质流量套餐和精选手机号码，满足您的多样化通信需求。";
const pageKeywords = "随身WiFi,云路由器,流量套餐,靓号,便携上网,智能路由,物联网设备,5G网络";
---

<BaseLayout 
  pageTitle={pageTitle}
  desc={pageDesc}
  keywords={pageKeywords}
>
  <main>
    <section class="py-4 bg-gradient-to-b from-gray-50 to-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {pageTitle}
          </h1>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-blue-700 mx-auto mb-8"></div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            为您提供优质的通信产品和服务，让连接更简单，生活更智能
          </p>
        </div>
        
        <div class="grid gap-8 md:grid-cols-2">
          {products.map(product => (
            <article class="group relative overflow-hidden rounded-2xl bg-white shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              {/* 标签 */}
              <div class="absolute top-4 right-4 z-10">
                <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium text-white bg-gradient-to-r ${product.tagColor}`}>
                  {product.tag}
                </span>
              </div>
              
              {/* 产品图片 */}
              <div class="relative aspect-[16/9] overflow-hidden">
                <Image
                  src={product.image}
                  alt={product.imageAlt || product.name}
                  width={600}
                  height={338}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              
              {/* 产品信息 */}
              <div class="p-6">
                <header class="flex justify-between items-center mb-4">
                  <h2 class="text-xl font-bold text-gray-900">{product.name}</h2>
                  <span class="text-lg font-semibold text-blue-600">{product.price}</span>
                </header>
                
                <p class="text-gray-600 mb-6 line-clamp-3">{product.description}</p>
                
                {/* 产品特性 */}
                <div class="bg-gray-50 rounded-xl p-4 mb-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4">产品特色</h3>
                  <ul class="grid grid-cols-2 gap-3">
                    {product.features.map(feature => (
                      <li class="flex items-center text-gray-700">
                        <svg class="w-5 h-5 text-blue-600 mr-2 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                <a
                  href={product.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full text-center py-3 px-6 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium hover:from-blue-700 hover:to-blue-800 transition-all duration-300 transform hover:-translate-y-0.5"
                >
                  了解更多
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
